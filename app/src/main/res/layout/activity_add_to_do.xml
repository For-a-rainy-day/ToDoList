<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToDo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/qizgish"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="add_to_do"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_to_do_name"
        style="@style/edit_style"
        android:hint="to_do_name" />

    <EditText
        android:id="@+id/edt_to_do_description"
        style="@style/edit_style"
        android:hint="to_do_description" />

    <Spinner
        android:id="@+id/spiner_add_to_do"
        style="@style/edit_style" />

    <EditText
        android:id="@+id/edt_to_do_create_data"
        style="@style/edit_style"
        android:inputType="date"

        android:hint="to_do_create_data" />

    <EditText
        android:id="@+id/edt_dedline"
        style="@style/edit_style"
        android:inputType="datetime"
        android:hint="To_do_dedline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_save_add_to_do"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/qizgish"
        android:text="save"
        android:textAllCaps="false"
        android:textSize="15sp" />


</LinearLayout>